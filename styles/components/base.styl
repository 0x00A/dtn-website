/*------------------------------------------------------------------------------
*
*  Base
*
------------------------------------------------------------------------------*/

html
  box-sizing: border-box

*,
*:before,
*:after
  box-sizing: inherit


::-moz-selection
  background: $red
  color: white
  
::selection
  background: $red
  color: white

html
  font-size: 100%

@media $smartphone
  html
    font-size: 75%

@media $tablet
  html
    font-size: 87.5%

body
  font: 400 1rem/1.5 $font-Lora
  background-color: white
  color: $space-gray
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

header
  font: 400 1rem/1.5 $font-Carrois

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

a, a:focus, a:visited
  text-decoration: none
  cursor: pointer

.content
  a:not(.button), a:focus:not(.button), a:visited:not(.button)
    color: black

a:not(.button):hover
  text-decoration: underline

h1, h2, h3, h4
  margin: 2.5rem 0
  line-height: $line-height-headings

h1
  font-size: $font-size-h1

h2
  margin-top: 0
  font-size: $font-size-h2

h3
  margin-bottom: 0
  font-size: $font-size-h3
  font-weight: 400

h4
  font-size: $font-size-h4

